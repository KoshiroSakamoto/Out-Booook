<%= stylesheet_link_tag "sinki", :media => "all" %>
<div class="container">
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
     <h1 class="text-center font-weight-bold pt-5 pb-5">新規登録</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>


  <div class="field pt-3">
    <%= f.label "名前" %><br />
    <%= f.text_field :name, autofocus: true , class: "col-md-12 form-control"%>
  </div>

       <div class="field pt-3">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email ", class: "col-md-12 form-control" %>
       </div>

       <div class="field pt-3">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "password", class: "col-md-12 form-control" %>
       </div>

       <div class="field pt-3">
        <%= f.label "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "col-md-12 form-control" %>
       </div>

       <div class="actions pt-4">
        <%= f.submit "新規登録", class: "btn  btn-primary " %>
       </div>
       <% end %>

        <div class="pt-3">
       <%= render "users/shared/links" %>
    </div>
    </div>
    <div class="col-md-3">

    </div>
  </div>
</div>
