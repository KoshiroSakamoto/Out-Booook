<%= stylesheet_link_tag "useredit", :media => "all" %>
<header>
  <h1>OutBooook</h1>
  <div class="header-list">
  <ul>
    <li><%= link_to "投稿一覧", tweets_path %></li>
    <% if current_user.id == @user.id %>
    <li><%= link_to "マイページ", user_path(current_user.id) %></li>
    <% end %>
    <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
  </ul>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">

<h2 class="text-center font-weight-bold pt-5">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field pt-3">
    <%= f.label "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-12 form-control" %>
  </div>

  <div class="field pt-3">
    <%= f.label "プロフィール" %><br />
    <%= f.text_area :profile, autofocus: true, class: "col-md-12 form-control" %>
  </div>

  <div class="field pt-3">
    <%= f.label "画像" %>
    <%= f.file_field :image %>
  </div>

  <div class="field pt-3">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12 form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field pt-3">
    <%= f.label "新しいパスワード" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "col-md-12 form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field pt-3">
    <%= f.label "新しいパスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-md-12 form-control"%>
  </div>

  <div class="field pt-3">
    <%= f.label "現在のパスワード" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "col-md-12 form-control" %>
  </div>

  <div class="actions pt-3">
    <%= f.submit "更新" ,class: "btn btn-lg btn-primary btn-block" %>
  </div>
 <% end %>

</div>
    <div class="col-md-3">

    </div>
  </div>
</div>




