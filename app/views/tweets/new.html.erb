<%= stylesheet_link_tag "new", :media => "all" %>
<header>
  <h1>Out Booook</h1>
  <div class="header-list">
  <ul>
    <li><%= link_to "マイページへ", user_path(current_user.id) %></li>
    <li><%= link_to "投稿一覧", tweets_path %></li>
    <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
  </ul>
  </div>
</header>

<h1 class="text-center font-weight-bold pt-5 ">新規投稿</h1>
<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@tweet, :url => { controller:'tweets', action:'create'})do |f| %>
    <%= f.label :投稿内容 %>
        <br>
        <%= f.text_field :body,size: 140%>
        <%= f.file_field :image %>
        <br>
    <%= f.submit "送信"%>
    <br>
    <% end %>
</div>


