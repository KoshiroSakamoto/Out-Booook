     <h1 class="text-center font-weight-bold pt-5 ">編集</h1>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for @tweet do |f| %>
    <%= f.label :投稿内容 %>
        <br>
        <%= f.text_field :body,size: 140%>
        <%= f.file_field :image %>
        <br>
        <%= f.submit "編集" %>
    <br>
    <% end %>
</div>

